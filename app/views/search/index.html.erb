<body class="bgimage">
  <h1 class="text-center text-dark">Search OMDB</h1>
  <div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
      <form class="col-6">
      <%= form_tag(search_index_path, :method => "get",
            id: "search-form", name: "title", enforce_utf8: true) do %>
        <div class="col-4"></div>
        <div class="input-group form-group">
          <%= text_field_tag :search, params[:search],
            placeholder: "Search For Your Favorite Movie Titles...",
              class: "form-control", name: "search", required: true %>
          <div class="input-group-btn">
            <button class="btn btn-secondary">
              <span>Search OMDB</span>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
